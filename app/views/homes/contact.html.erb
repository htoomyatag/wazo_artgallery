      <div id="content">
    <div class="container">
          <div class="row">
        <article class="span8">
              <h3>Contact us</h3>
              <div class="inner-1">
                
              <%= form_for(@home, :html => {:id => "contact-form"}) do |f|%>
                 <div class="success"> Contact form submitted! <strong>We will be in touch soon.</strong> </div>
                  <fieldset>
                  <div>
                    <label class="name">
                      <%= f.text_field :name, :required => true, :class => "text", :placeholder =>"Your Name Here", :class =>"col-12" %>
                      <br>
                      <span class="error">*This is not a valid name.</span> <span class="empty">*This field is required.</span> 
                    </label>
                  </div>
                  <div>
                    <label class="phone">
                      <%= f.text_field :phone, :required => true, :class => "text", :placeholder =>"Your Phone No. Here", :class =>"col-12" %>
                      <br>
                      <span class="error">*This is not a valid phone number.</span> <span class="empty">*This field is required.</span>
                    </label>
                  </div>
                  <div>
                    <label class="email">
                      <%= f.text_field :email, :required => true, :class => "text", :placeholder =>"Your Email Here", :class =>"col-12" %>
                      <br>
                      <span class="error">*This is not a valid email address.</span> <span class="empty">*This field is required.</span>
                    </label>
                  </div>
                  <div>
                    <label class="message">                  
                      <%= f.text_area :message, :required => true, :class => "text", :placeholder =>"Your Message Here", :class =>"col-12"  %>
                      <br>
                      <span class="error">*The message is too short.</span> <span class="empty">*This field is required.</span> 
                    </label>
                  </div>
                  <div  class="buttons-wrapper">
                   <%= f.button "Clear", :class => "btn btn-1", :type => "reset" %>
                   <%= f.button "Send", :class => "btn btn-1", :type => "submit" %>
                  </div>
                </fieldset>
              <% end %>
          </div>
            </article>
        <article class="span4">
          <h3>Contact info</h3>
