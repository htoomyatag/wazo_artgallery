<ul class="breadcrumb">
  <li><a href="#" id="a_style">Admin Panel</a> <span class="divider">/</span></li>
    <li><a href="#" id="a_style">Dashboard</a> <span class="divider">/</span></li>
    <li class="active">Paints</li>
</ul>
<div class="page-header">
  <h1>Paints data<small> list of paint infomation</small></h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Code</th>
      <th>Title</th>
      <th>Paint Type</th>
      <th>Size</th>
      <th>Price</th>
      <th>Artist Name</th>
      <th>Our Artwork</th>
      <th>New Arrival</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @paints.each do |paint| %>
      <tr>
        <td><%= paint.item_code rescue "-" %></td>
        <td><%= paint.title rescue "-" %></td>
        <td><%= paint.paint_type.type_name rescue "-" %></td>
        <td><%= paint.size.size rescue "-" %></td>
        <td><%= paint.price rescue "-" %></td>
        <td><%= paint.artist.name rescue "-" %></td>
        <td><%= paint.our_artwork rescue "-" %></td>
        <td><%= paint.new_arrival rescue "-" %></td>
        <td><%= link_to 'Show', paint, :id => "a_style" %></td>
        <td><%= link_to 'Edit', edit_paint_path(paint), :id => "a_style" %></td>
        <td><%= link_to 'Destroy', paint, method: :delete, data: { confirm: 'Are you sure?' }, :id => "a_style" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Paint', new_paint_path, :class => "btn btn-default" %>

