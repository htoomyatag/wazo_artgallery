<ul class="breadcrumb">
  <li><a href="#" id="a_style">Admin Panel</a> <span class="divider">/</span></li>
    <li><a href="#" id="a_style">Dashboard</a> <span class="divider">/</span></li>
    <li class="active">Exhibitions</li>
</ul>
<div class="page-header">
  <h1>Exhibition data<small> list of exhibition infomation</small></h1>
</div>

<table class="table">
  <thead >
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exhibitions.each do |exhibition| %>
      <tr>
        <td><%= exhibition.title %></td>
        <td><%= link_to 'Show', exhibition, :id => "a_style" %></td>
        <td><%= link_to 'Edit', edit_exhibition_path(exhibition), :id => "a_style" %></td>
        <td><%= link_to 'Destroy', exhibition, method: :delete, data: { confirm: 'Are you sure?' }, :id => "a_style" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Exhibition', new_exhibition_path, :class =>"btn btn-default" %>
