<ul class="breadcrumb">
  <li><a href="#" id="a_style">Admin Panel</a> <span class="divider">/</span></li>
    <li><a href="#" id="a_style">Dashboard</a> <span class="divider">/</span></li>
    <li class="active">Artists</li>
</ul>

<div class="page-header">
  <h1>Artists data<small> list of artist infomation</small></h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date of birth</th>
      <th>Description</th>
      <th>Professional</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td><%= artist.name %></td>
        <td><%= artist.date_of_birth %></td>
        <td><%= artist.desc %></td>
        <td><%= artist.painter_type %></td>
        <td><%= link_to 'Show', artist, :id => "a_style" %></td>
        <td><%= link_to 'Edit', edit_artist_path(artist), :id => "a_style" %></td>
        <td><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' }, :id => "a_style" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Artist', new_artist_path, :class =>"btn btn-default" %>
