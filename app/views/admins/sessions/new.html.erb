
<div class="row-fluid">
  <div class="span4"></div>
  <div class="span4">
    <br/> <br/> <br/> <br/> <br/> 
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <fieldset>
      <div style="margin:25px 24px 10px 24px;">
          <%= image_tag  "adminlogo.png" %> 
      <h3 style="text-align:center;">Colorcube Admin</h3>
        <label>User name</label>
        <%= f.text_field :user_name, autofocus: true, :id => "cus_text" %>
        <label>Password</label>
        <%= f.password_field :password, autocomplete: "off", :id => "cus_text" %>
        <% if devise_mapping.rememberable? -%>
          <label class="checkbox">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </label>
        <% end -%>
        <button type="submit" class="btn btn-danger" id="cus_btn">Sign In</button>
        <div>
      </fieldset>
    
    <% end %>
  </div>


  <div class="span4"></div>
</div>
