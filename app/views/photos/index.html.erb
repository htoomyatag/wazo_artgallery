<ul class="breadcrumb">
  <li><a href="#" id="a_style">Admin Panel</a> <span class="divider">/</span></li>
    <li><a href="#" id="a_style">Dashboard</a> <span class="divider">/</span></li>
    <li class="active">Photos</li>
</ul>
<div class="page-header">
  <h1>Photographs data<small> list of photographs infomation</small></h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Color</th>
      <th>Size</th>
      <th>Price</th>
      <th>Photographer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= photo.title rescue "-" %></td>
        <td><%= photo.color rescue "-" %></td>
        <td><%= photo.size.size rescue "-" %></td>
        <td><%= photo.price rescue "-" %></td>
        <td><%= photo.artist.name rescue "-" %></td>        
        <td><%= link_to 'Show', photo, :id => "a_style" %></td>
        <td><%= link_to 'Edit', edit_photo_path(photo), :id => "a_style" %></td>
        <td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' }, :id => "a_style" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Photo', new_photo_path,  :class => "btn btn-default" %>
