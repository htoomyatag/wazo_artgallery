<ul class="breadcrumb">
  <li><a href="#" id="a_style">Admin Panel</a> <span class="divider">/</span></li>
    <li><a href="#" id="a_style">Dashboard</a> <span class="divider">/</span></li>
    <li class="active">Sizes</li>
</ul>
<div class="page-header">
  <h1>Size data<small> list of sizes infomation</small></h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sizes.each do |size| %>
      <tr>
        <td><%= size.size rescue "-" %></td>
        <td><%= link_to 'Show', size, :id => "a_style" %></td>
        <td><%= link_to 'Edit', edit_size_path(size), :id => "a_style" %></td>
        <td><%= link_to 'Destroy', size, method: :delete, data: { confirm: 'Are you sure?' }, :id => "a_style" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Size', new_size_path, :class => "btn btn-default" %>
